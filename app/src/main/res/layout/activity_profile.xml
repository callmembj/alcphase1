<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1245a8"
        android:text="Profile"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:fontFamily="@font/roboto_bold" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/jide" />

    <TextView
        android:id="@+id/babajide_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:padding="7dp"
        android:text="Babajide Aderoju"
        android:textSize="30sp"
        app:fontFamily="@font/aclonica" />

    <LinearLayout
        android:id="@+id/border_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#424242"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#0000ff"
            android:padding="5dp"
            android:text="Track: Andriod"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#0000ff"
            android:padding="5dp"
            android:text="Country: Nigeria"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#0000ff"
            android:padding="5dp"
            android:text="Email: aderojujide03@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#0000ff"
            android:padding="5dp"
            android:text="Phone Number: 09039344324"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#0000ff"
            android:padding="5dp"
            android:text="Stack Username: callmeMBJ"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="@font/aclonica" />
    </LinearLayout>

</LinearLayout>